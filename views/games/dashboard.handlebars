<article class="dashboard">
  <h1>{{user.profile.name}}'s Dashboard</h1>

  <h2>Games you might like based on {{game.name}}</h2>
  {{#each games}}  
    <article class="game">
      <h2><a href="/games/{{this._id}}">{{this.name}}</a></h2>
      <img src={{this.art}} alt="Game Art">
      <p>{{this.keywords}}</p>
      <p>{{this.description}}</p>
    </article>
  {{/each}}

  <h2>Popular Games</h2>
  {{#each popgames}}  
    <article class="game">
      <h2><a href="/games/{{this._id}}">{{this.name}}</a></h2>
      <img src={{this.art}} alt="Game Art">
      <p>{{this.keywords}}</p>
      <p>{{this.description}}</p>
    </article>
  {{/each}}

</article>